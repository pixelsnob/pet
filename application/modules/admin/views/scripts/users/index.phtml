    if ($this->orders) {

        $pagination = $this->paginationControl($this->paginator, 'Sliding', 'pagination/default.phtml', array('params' => $this->params));
        echo $pagination;
        echo $this->objectsToAdminTable(array(
            'id'           => array('title'  => 'User ID'),
            'date_joined'  => array(
                'title'    => 'Date Joined',
                'format'   => 'datetime'
            ),
            'username', 
